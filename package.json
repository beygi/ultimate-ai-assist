{
  "name": "ai-text-helper-vite",
  "version": "1.0.0",
  "description": "A cross-browser extension built with Vite and TypeScript.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev:firefox": "vite build --watch --mode firefox",
    "dev:chrome": "vite build --watch --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "build:chrome": "vite build --mode chrome",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.2",
    "@types/webextension-polyfill": "0.12.3",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "prettier": "3.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1",
    "vite": "7.0.2"
  },
  "dependencies": {
    "daisyui": "5.0.43",
    "tailwindcss": "4.1.11",
    "webextension-polyfill": "0.12.0"
  }
}
